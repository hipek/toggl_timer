<h2>Toggl sync</h2>

<%= form_tag toggl_path do %>
  <% dates = (60.days.ago.to_date..Date.today).to_a.reverse %>
  Start date:
  <%= select_tag 'sync[start_date]', options_for_select(dates) %>

  End date:
  <%= select_tag 'sync[end_date]', options_for_select(dates) %>

  <br />
  <%= submit_tag 'Sync' %>

<% end %>
